<!doctype html>
<html lang="{{ metadata.language }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}"> {#- Uncomment this if you’d like folks to know that you used Eleventy to build your site!  #}
    {#- <meta name="generator" content="{{ eleventy.generator }}"> #} <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-diff.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link
    rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}"> <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous">
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/3af9f5ed90.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div
          class="container-fluid">
          <!-- LOGO goes here - add an image later -->
          <a class="navbar-brand" href="#">JJS</a>
          <!-- Navbar toggler -->
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <!-- Navbar collapse -->
          <div
            class="collapse navbar-collapse" id="navbarNav">
            <!-- Navigation  -->
            <div class="navbar-nav mx-lg-auto">
              {%- for entry in collections.all | eleventyNavigation %}
                <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}">
                  <a class="nav-link" href="{{ entry.url | url }}">{{ entry.title }}</a>
                </li>
              {%- endfor %}
            </div>
          </div>
        </div>
      </nav>
    </header>
    <main {% if templateClass %} class="{{ templateClass }}" {% endif %}>
      {{ content | safe }}
    </main>
    <footer
      class="bg-light text-center text-black">
      <!-- Section: Professional links -->
      <div>
        <section>
          <ul class="icon-list">
            <li class="icon-item">
              <a href="#" class="icon-link">
                <i class="fab fa-github"></i>
              </a>
            </li>
            <li class="icon-item">
              <a href="#" class="icon-link">
                <i class="fab fa-linkedin-in"></i>
              </a>
            </li>
          </ul>
        </section>
      </div>
      <!-- Section: Copyright -->
      <div class="text-center">
        © 2022 Copyright |
        <a class="text-black" href="/">James J Shaw</a>
      </div>
    </footer>
  </body>
</html>